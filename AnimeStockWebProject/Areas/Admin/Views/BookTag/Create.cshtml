@using AnimeStockWebProject.Infrastructure.Data.Enums
@model EditBookTagViewModel

<link rel="stylesheet" href="~/css/Admin/Book/CreateStyles.css" asp-append-version="true" />

<link rel="stylesheet" href="~/css/footerStyles.css" asp-append-version="true" />

<div class="container">
    <h1 class="title">Create Tag</h1>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Name">Tag Name</label>
            <input id="Name" class="form-control" asp-for="@Model.Name" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<script>
    document.querySelectorAll("input[type=file]").forEach(input => input.style.opacity = 0);

</script>

<script src="~/js/Admin/Books/Book.js"></script>

<script src="~/js/Modal.js"></script>